{
    "compilerOptions": {
        "target": "ES3",
        "module": "CommonJS",
        "lib": ["DOM", "ES2019", "ESNext"],
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "test"
    ]
}